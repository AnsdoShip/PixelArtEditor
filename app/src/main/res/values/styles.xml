<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="animTranslateInLeftTop">
        <item name="android:windowEnterAnimation">@anim/translate_in_left_top</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="animTranslateInLeftBottom">
        <item name="android:windowEnterAnimation">@anim/translate_in_left_bottom</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="animTranslateInRightTop">
        <item name="android:windowEnterAnimation">@anim/translate_in_right_top</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="animTranslateInRightBottom">
        <item name="android:windowEnterAnimation">@anim/translate_in_right_bottom</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
