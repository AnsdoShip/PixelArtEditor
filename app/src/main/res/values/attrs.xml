<resources>

    <declare-styleable name="PaletteView">
        <attr name="android:checked"/>
        <attr name="paletteBackgroundColor1" format="integer"/>
        <attr name="paletteBackgroundColor2" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PaletteList">
        <attr name="size" format="integer" />
        <attr name="checkedIndex" format="integer" />
        <attr name="paletteWidth" format="dimension" />
        <attr name="paletteHeight" format="dimension" />
        <attr name="paletteBackgroundColor1"/>
        <attr name="paletteBackgroundColor2"/>
    </declare-styleable>

    <declare-styleable name="CheckedImageView">
        <attr name="android:checked"/>
    </declare-styleable>

</resources>
